<div class="container">
<div class="row">
<div class="col-10">
<h1>List of articles:</h1>

<% @articles.each do |article| %>

<h2><%= article.title %></h2>
<p><%= article.text %></p>

<p><%= link_to 'Show', article_path(article), class: 'btn btn-outline-primary col-1' %>
  <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-success col-1" %>
  <%= link_to 'Dectroy', article_path(article), method: :delete, data:{ confirm: 'Are you sure?' }, class: "btn btn-outline-danger col-1"%></p>
<hr/>

<% end %>
</div>
</div>
</div>
