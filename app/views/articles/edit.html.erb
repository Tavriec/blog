<div class="container">
<div class="row">
<div class="col-4">
<h1>Edit articles</h1>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title, class: "form-control", placeholder: "Title input", style: "width: 400px" %>
  </p>
  <p>
    <%= f.label :text %><br/>
    <%= f.text_area :text, class: "form-control", placeholder: "Text input", style: "width: 400px" %>
  </p>
  <p>
    <%= f.submit"Save Article", class: "btn btn-success" %>
  </p>
  <%= link_to 'Back', articles_path %>

<% end %>
</div>
</div>
</div>