<h1><%= @article.title %></h1>
<p><%= @article.text %></p>
<%= link_to 'Back', articles_path %>

<h2>Comments</h2>

<% @article.comments.each do |comment| %>

<p>
<i><%= comment.author %> said:</i><br />
<%= comment.body %></p>

<hr/>

<% end %>

<h2>Add comment</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>